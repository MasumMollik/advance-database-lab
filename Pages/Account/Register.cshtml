@page
@model PerformanceCalculator.Pages.Account.RegisterModel
@{
}
<br/>
<h2 class="text-info">Register</h2>
<br/>
<div class="border container" style="padding: 30px;">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Register.Name" class="control-label"></label>
            </div>
            <div class="col-8">
                <input asp-for="Register.Name" class="form-control"/>
                <span asp-validation-for="Register.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Register.Email" class="control-label"></label>
            </div>
            <div class="col-8">
                <input asp-for="Register.Email" class="form-control"/>
                <span asp-validation-for="Register.Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Register.Password" class="control-label"></label>
            </div>
            <div class="col-8">

                <input asp-for="Register.Password" class="form-control"/>
                <span asp-validation-for="Register.Password" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Register" class="btn btn-primary form-control"/>
            </div>
            <div class="col-3">
                <a class="btn btn-success form-control" asp-page="./Index">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}