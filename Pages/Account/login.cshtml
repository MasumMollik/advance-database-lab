@page
@model PerformanceCalculator.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<br/>
<h2 class="text-info">Login</h2>
<br/>
<div class="border container" style="padding: 30px;">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Login.Email" class="control-label"></label>
            </div>
            <div class="col-8">
                <input asp-for="Login.Email" class="form-control"/>
                <span asp-validation-for="Login.Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Login.Password" class="control-label"></label>
            </div>
            <div class="col-8">
                <input id="password" asp-for="Login.Password" class="form-control"/>
                <span asp-validation-for="Login.Password" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <input class="mr-3" type="checkbox" onclick="showPassword()">Show Password
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Login" class="btn btn-primary form-control"/>
            </div>
            <div class="col-3">
                <p>Don't have an account?. Please contact with admin with proper documents.</p>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}